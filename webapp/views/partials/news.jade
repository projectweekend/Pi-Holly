div(class="row")
  
  div(class="col-md-6")
    div(ng-repeat="a in newsArticles.articles.col_1")
      h3 {{ a.title }}
      div(class="article-img-wrapper")
        img(ng-src="{{ a.image_url }}", class="img-rounded img-responsive")
      div
        p {{ a.summary }}
      div(class="btn-group btn-group-justified")
        button(class="btn btn-success") Read it
        button(class="btn btn-danger") Ignore it
      hr
      
  div(class="col-md-6")
    div(ng-repeat="a in newsArticles.articles.col_2")
      h3 {{ a.title }}
      div(class="article-img-wrapper")
        img(ng-src="{{ a.image_url }}", class="img-rounded img-responsive")
      div
        p {{ a.summary }}
      div(class="btn-group btn-group-justified")
        a(ng-click="newsArticles.readArticle(a)", ng-href="{{ a.url }}", class="btn btn-success") Read it
        a(ng-click="newsArticles.ignoreArticle(a)", class="btn btn-danger") Ignore it        
      hr
