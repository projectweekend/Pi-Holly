div(class="row")
  div(class="col-xs-12")
    form(id="news-source", role="form")
      div(class="form-group")
        label Source URL
        input(ng-model="editing.url", class="form-control", type="url", required)
      div(class="form-group")
        label Category
        select(ng-model="editing.category", class="form-control", required)
          option(value="development") Development
          option(value="making") Making
          option(value="music") Music
          option(value="technology") Technology
      div(class="btn-toolbar")
        button(ng-click="editing.save()", class="btn btn-primary") Save
        button(ng-click="editing.cancel()", class="btn btn-default") Cancel

div(class="row")
  div(class="col-xs-12")
    ul(class="list-unstyled")
      li
